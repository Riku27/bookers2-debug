<table class="table table-hover table-inverse">

 <% if @range == "User" %>
 <h2>Users search for</h2>
 <thead>
  <tr>
   <th>image</th>
   <th>name</th>
  </tr>
 </thead>
 <tbody>
  <% @users.each do |user| %>
  <tr>
   <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
   <td><%= user.name %></td>
  </tr>
  <% end %>
 </tbody>
 <% else %>
 <h2>Books search for</h2>
 <thead>
  <tr>
   <th></th>
   <th>title</th>
   <th>opinion</th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr>
   <td></td>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
  </tr>
 <% end %>
 </tbody>
 <% end %>
</table>